<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopSale" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2C2C2C</item>
        <item name="colorPrimaryVariant">#FF6A6A</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:windowEnterTransition">@transition/slide_in_right</item>
        <item name="android:windowExitTransition">@transition/slide_out_left</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
    <style name="NavAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_bar_selector</item>
    </style>
    <style name="DialogAnimationOption">
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
    </style>
    <style name="theme_red">
        <item name="colorPrimary">#ED4E4E</item>
        <item name="colorPrimaryVariant">#FF6464</item>
    </style>
    <style name="theme_blue">
        <item name="colorPrimary">#0b5ed7</item>
        <item name="colorPrimaryVariant">#0b5ed7</item>
    </style>
</resources>